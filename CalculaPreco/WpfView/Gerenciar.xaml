<Window x:Class="WpfView.Gerenciar"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfView"
        mc:Ignorable="d"
        Title="Gerenciar"  Height="450" Width="264.5" Background="#FF5500">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="5*"/>
            <ColumnDefinition Width="1*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="5*"  />
            <RowDefinition Height="1*"  />
        </Grid.RowDefinitions>
        <Button x:Name="btnCadastrarCompra" Content="Cadastrar Compra" Grid.Column="1" HorizontalAlignment="Left" Margin="37,36,0,0" Grid.Row="1" VerticalAlignment="Top" Width="122" Click="btnCadastrarCompra_Click" Height="87"/>
        <Button x:Name="btnMostrarGastos" Content="Mostrar Compras" Grid.Column="1" HorizontalAlignment="Left" Margin="37,135,0,0" Grid.Row="1" VerticalAlignment="Top" Width="122" Click="btnMostrarGastos_Click" Height="87"/>
    </Grid>
</Window>
