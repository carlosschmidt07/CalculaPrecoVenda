<Window x:Class="WpfView.Login"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfView"
        mc:Ignorable="d"
        Title="Login" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*" />
            <ColumnDefinition Width="3*" />
            <ColumnDefinition Width="2*" />
        </Grid.ColumnDefinitions>
        <Button x:Name="btnLogar" Content="Button" Grid.Column="1" HorizontalAlignment="Left" Margin="224,178,0,0" VerticalAlignment="Top" Width="75" Click="btnLogar_Click"/>
        <Label Content="Email:" Grid.Column="1" HorizontalAlignment="Left" Margin="73,77,0,0" VerticalAlignment="Top"/>
        <Label Content="Senha" Grid.Column="1" HorizontalAlignment="Left" Margin="73,122,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="txtEmail" Grid.Column="1" HorizontalAlignment="Left" Height="23" Margin="132,77,0,0" TextWrapping="Wrap"  VerticalAlignment="Top" Width="120"/>
        <TextBox x:Name="txtSenha" Grid.Column="1" HorizontalAlignment="Left" Height="23" Margin="132,126,0,0" TextWrapping="Wrap"  VerticalAlignment="Top" Width="120"/>
    </Grid>
</Window>
